[Unit]
Description=Silverstone-V2 Platform Fans Control service
After=pmon.service
DefaultDependencies=no

[Service]
ExecStart=/usr/local/bin/FanControl/FanControl.py
ExecReload=/usr/local/bin/FanControl/FanControl.py
Restart=always
RestartSec=30s
KillSignal=SIGKILL
SuccessExitStatus=SIGKILL

# Resource Limitations
LimitCORE=infinity

[Install]
WantedBy=multi-user.target
