[Unit]
Description=Silverstone-V2 Platform background monitor service
After=pmon.service
DefaultDependencies=no

[Service]
Type=oneshot
ExecStart=/usr/local/bin/pddf_sensor_list_refresh.py
ExecStart=/usr/local/bin/FanControl/FanControl.py
KillSignal=SIGKILL
SuccessExitStatus=SIGKILL

# Resource Limitations
LimitCORE=infinity

[Install]
WantedBy=multi-user.target
